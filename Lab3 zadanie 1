using System;
using System.Collections.Generic;

namespace ShapesApp
{
    public abstract class Shape
    {
        public int X { get; set; }
        public int Y { get; set; }
        public int Height { get; set; }
        public int Width { get; set; }

        public abstract void Draw();
    }
    public class Rectangle : Shape
    {
        public override void Draw()
        {
            Console.WriteLine($"Rysuję prostokąt o współrzędnych ({X}, {Y}, wysokości {Height} i szerokości {Width}"
        }

    }
    public class Triangle : Shape
    {
        public override void Draw()
        {
            Console.WriteLine($"Rysuję prostokąt o współrzędnych ({X}, {Y}, wysokości {Height} i szerokości {Width}"
        }
    }
    public class Circle : Shape
    {
        public override void Draw()
        {
            Console.WriteLine($"Rysuję prostokąt o współrzędnych ({X}, {Y}, wysokości {Height} i szerokości {Width}"
        }
    }
    class Program
    {
        static void Main(string[] args)
        {
            List<Shape> list = new List<Shape>();
            Shapes.Add(new Rectangle { X = 10, Y = 20, Height = 30, Width = 40 });
            Shapes.Add(new Triangle { X = 15, Y = 25.Height = 35, Width = 45 });
            Shapes.Add(new Circle { X = 20, Y = 30, Height = 50, Width = 50 });

            foreach (var shape in shapes)
            {
                shape.Draw();
            }
            Console.ReadLine();
        }
    }
}
